@model User

<form method="post" asp-action="DeletePOST">
	<input asp-for="Id" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-light">Delete User</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="UserName"></label>
			<input asp-for="UserName" disabled class="form-control" />
		</div>
		<div class="container p-0">
			<div class="row pt-0">
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="UserPassword"></label>
						<input asp-for="UserPassword" disabled class="form-control" />
					</div>
				</div>
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="UserType"></label>
						<select asp-for="UserType" name="UserType" disabled class="form-control">
							<option disabled value="">Select a user...</option>
							@foreach (var user in ViewBag.Users)
							{
								<option value="@user.Id">@user.UserType</option>
							}
						</select>
					</div>
				</div>
			</div>
		</div>
		<button type="submit" class="btn btn-danger">Delete User</button>
		<a asp-controller="User" asp-action="Index" class="btn btn-secondary">Back to List</a>
	</div>
<br />
<br />
</form>

@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

@model User

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-light">Edit User</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="UserName"></label>
			<input asp-for="UserName" class="form-control" />
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
		<div class="container p-0">
			<div class="row pt-0">
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="UserPassword"></label>
						<input asp-for="UserPassword" class="form-control" />
						<span asp-validation-for="UserPassword" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group col-6">
					<div class="mb-3">
						<label asp-for="UserType"></label>
						<select asp-for="UserType" class="form-select">
							<option disabled value="">Select a user type...</option>
							<option value="user">user</option>
							<option value="admin">admin</option>
						</select>
					</div>
				</div>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Edit User</button>
		<a asp-controller="User" asp-action="Index" class="btn btn-secondary">Back to List</a>
	</div>
<br />
<br />
</form>

@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
